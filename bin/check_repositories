#!/usr/bin/env sh

declare -i AHEAD=0
declare -i BEHIND=0

declare -a repo_list=(
"$HOME/dotfiles"
"$HOME/scripts"
"$HOME/.suckless/dwm"
"$HOME/.suckless/st"
)

for i in "${repo_list[@]}"; do

	cd "$i"

	git fetch 2>/dev/null

	GITSTATUS="$(git status)"

	if [ "$(echo $GITSTATUS | grep "is ahead")" != "" ]; then
		[ "$1" = "--verbose" ] && echo "$i"
		AHEAD+="$(echo $GITSTATUS | grep -o '[0-9]')"
	elif [ "$(echo $GITSTATUS | grep "is behind")" != "" ]; then
		[ "$1" = "--verbose" ] && echo "$i"
		BEHIND+="$(echo $GITSTATUS | grep -o '[0-9]')"
	elif [ "$(echo $GITSTATUS | grep "have diverged")" != "" ]; then
		[ "$1" = "--verbose" ] && echo "$i"
		declare -a DIVERGED=($(echo "$GITSTATUS" | grep -o '[0-9]'))
		AHEAD+="${DIVERGED[0]}"
		BEHIND+="${DIVERGED[1]}"
	fi
done

echo "$AHEAD|$BEHIND" |& tee /tmp/check_repositories
