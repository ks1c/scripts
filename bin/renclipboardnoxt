#!/bin/bash

# Rename file with clipboard content preserving old file name extension

OLDNAME=$1
KEEPEXTENSION=$(echo $OLDNAME | awk -F '.' '{print $NF}')
REMOVEEXTENSION=$(xclip -o | awk -F '.' '{print $NF}')
NEWNAME=$(xclip -o | sed "s/$REMOVEEXTENSION//g")

if [ "$OLDNAME" != "$NEWNAME$KEEPEXTENSION" ]; then
	mv "$OLDNAME" "$NEWNAME$KEEPEXTENSION" &> /dev/null
fi
